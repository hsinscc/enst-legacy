<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <form id="form" class="col s12 m6 offset-m3" action="/photos/<%= photo._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="input-field col s12">
          <input id="text" type="text" name="comment[text]" class="validate" value="<%= comment.text %>">
          <label for="text">Comment to "<%= photo.name %>"</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Edit</button>
      </form>
    </div>
  </div>
<% include ../partials/footer %>