<% include ./partials/header %>

  <div class="container">
    <div class="row">
      <form id="form" class="col s12 m6 offset-m3" action="/reset/<%= token %>" method="POST">
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" name="password" class="validate">
            <label for="password">New password</label>
          </div>
          <div class="input-field col s12">
            <input id="confirm" type="password" name="confirm" class="validate">
            <label for="confirm">Confirm password</label>
          </div>
          <button class="btn waves-effect waves-light" type="submit" name="action">Update password!</button>
      </form>
    </div>
  </div>

<% include ./partials/footer %>